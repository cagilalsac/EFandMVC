@model CategoryDTO
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Create Category";
}

<h1>@ViewData["Title"]</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
		@Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="CategoryName" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="CategoryName" class="form-control" />
					<span asp-validation-for="CategoryName" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Description" class="col-2 col-form-label"></label>
				<div class="col-5">

                    <!-- 
                        Description özelliği için type'ı text olan bir input veri girişinde zorluk
                        yaratacağından textarea HTML tag'inin kullanılması daha uygun
                    -->
					<textarea asp-for="Description" class="form-control" rows="4"></textarea>

					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-primary" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to List</a>
				</div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @* Client-Side Validation: *@
    @* 1. yöntem: HTML Helper *@
    @* @await Html.PartialAsync("_ValidationScriptsPartial") *@
    @* 2. yöntem Tag Helper *@
    <partial name="_ValidationScriptsPartial" />
}


