@model CategoryDTO
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Delete Category";
}

<h1>@ViewData["Title"]</h1>

@if (ViewBag.ErrorMessage is not null)
{
    <p class="text-danger">@ViewBag.ErrorMessage</p>
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />

    <partial name="_Details" model="Model" />
    
    <form asp-action="Delete">
	@Html.AntiForgeryToken()

        <!-- silme işlemi için ID mutlaka formda saklanmalı -->
        <input type="hidden" asp-for="CategoryId" />

        <input type="submit" value="Yes" class="btn btn-danger" />&nbsp;&nbsp;
        <a asp-action="Index" class="btn btn-success">No</a>
    </form>
</div>



